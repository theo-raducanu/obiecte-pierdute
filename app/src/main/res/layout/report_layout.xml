<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent"
    >


    <Space
        android:layout_width="match_parent"
        android:layout_height="@dimen/nav_header_vertical_spacing"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tx_nr_tel"
        android:id="@+id/space2" />

    <TextView
        android:layout_width="160dp"
        android:layout_height="30dp"
        android:text="Nume Obiect"
        android:gravity="center"
        android:textAppearance="?android:textAppearanceMedium"
        android:textColor="@color/Black"
        android:textSize="18sp"
        android:id="@+id/tx_obiect"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="Locatie"
        android:textColor="@color/Black"
        android:textSize="18sp"
        android:gravity="center"
        android:textAppearance="?android:textAppearanceMedium"
        android:id="@+id/tx_locatie"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/tx_obiect" />

    <TextView
        android:id="@+id/tx_descriere"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:textColor="@color/Albastru"
        android:textSize="14sp"
        android:gravity="center"
        android:text="Mesaj"
        android:textAppearance="?android:textAppearanceSmall"
        android:layout_below="@+id/tx_obiect"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/tx_tip_obj"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:gravity="center"
        android:text="Tip Obiect"
        android:textColor="@color/Red"
        android:textSize="14sp"
        android:textAppearance="?android:textAppearanceSmall"
        android:layout_below="@+id/tx_obiect"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="28dp"
        android:layout_marginStart="28dp" />

    <!--<TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="locatie"
        android:layout_below="@+id/tx_descriere"
        android:gravity="center"
        android:textAppearance="?android:textAppearanceMedium"
        android:id="@+id/tx_locatie"
        />-->

    <ImageButton
        android:id="@+id/tx_location"
        style="@android:style/Widget.DeviceDefault.Light.ImageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tx_email"
        android:layout_below="@+id/tx_descriere"
        android:layout_marginLeft="51dp"
        android:layout_marginStart="51dp"
        android:layout_toEndOf="@+id/tx_email"
        android:layout_toRightOf="@+id/tx_email"
        android:backgroundTint="@color/Bleu"
        android:elevation="5dp"
        android:onClick="openLocation"
        app:srcCompat="@android:drawable/ic_menu_mylocation" />

    <ImageButton
        android:id="@+id/tx_email"
        style="@android:style/Widget.DeviceDefault.Light.ImageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tx_descriere"
        android:layout_centerHorizontal="true"
        android:backgroundTint="@color/Red"
        android:elevation="5dp"
        android:onClick="openMail"
        app:srcCompat="@android:drawable/ic_dialog_email" />

    <ImageButton
        android:id="@+id/tx_nr_tel"
        style="@android:style/Widget.DeviceDefault.Light.ImageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tx_email"
        android:layout_below="@+id/tx_descriere"
        android:layout_marginEnd="53dp"
        android:layout_marginRight="53dp"
        android:layout_toLeftOf="@+id/tx_locatie"
        android:backgroundTint="@color/Verde"
        android:elevation="5dp"
        android:onClick="openCall"
        app:srcCompat="@drawable/ic_phone_black_24dp" />
    <ImageView
        android:id="@+id/separator"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:src="@android:drawable/divider_horizontal_dark"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:paddingLeft="10dp"
        android:paddingRight="0dp"
        android:paddingBottom="10dp"
        android:paddingTop="10dp" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="@dimen/nav_header_vertical_spacing"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/separator"
        android:id="@+id/space3" />



</RelativeLayout>